SRC=src

all : %gslhelper%

# 'all', with compilation warnings
debug :
	%MAKE% "DBG=-Wall -g"  all

resources/libraries/%LIB-NAME% : $(SRC)/matrix%O%
	%LD% %LDSHARED% %LDFLAGS% -o %gslhelper% $(SRC)/matrix%O% -lgsl

%%O%: %.c
	%CC% -I $(SRC) -c %CCSHARED% %CCFLAGS% -I/usr/include/gsl $(DBG) -o $@ $<

clean :
	@rm -f $(SRC)/*%O%
	@rm -rf %gslhelper%
	@rm Makefile

realclean :
	@rm -rf lib/.precomp
